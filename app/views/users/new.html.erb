
<h1>Sign Up</h1>
<%= form_with model: @user, url: sign_up_path do |form| %>
  <%= render partial: "shared/form_errors", locals: { object: form.object } %>
  <div class="mb-3">
    <%= form.label :name, "Name" %>
    <%= form.text_field :name, class: "form-control", placeholder: "Your Name" %>
  </div>
  <div class="mb-3">
    <%= form.label :email %>
    <%= form.email_field :email, required: true, class: "form-control", placeholder: "abc@gmail.com"%>
  </div>
  <div class="mb-3">
    <%= form.label :password %>
    <%= form.password_field :password, required: true, class: "form-control", placeholder: "password" %>
  </div>
  <div class="mb-3">
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, required: true, class: "form-control", placeholder: "password confirm" %>
  </div>
  <div class="mb-3">
    <%= form.submit "Sign Up", class: "btn btn-primary" %>
  </div>
<% end %>
